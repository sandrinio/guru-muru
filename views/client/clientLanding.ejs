                </a>
                <a href="#" class="social-icon si-borderless si-text-color si-youtube" data-animate="bounceInLeft" data-delay="5200">
                    <i class="icon-youtube"></i>
                    <i class="icon-youtube"></i>
                </a>
            </div>

            <div class="row">
				<div class="col-md-9 col-sm-12">

					<!-- Post Content
					============================================= -->
					<div class="postcontent nobottommargin clearfix">

						<!-- Posts
						============================================= -->

                        <div class="fancy-title title-center title-dotted-border topmargin">
                            <h3><spam class="first-letter">ა</spam>ხალი <spam class="first-letter">ა</spam>მბები</h3>
                        </div>
						<div id="posts" class="small-thumbs">
                            <% data.hot.forEach(function( hotNews ) { %>
							<div class="entry clearfix">
								<div class="entry-image">
									<a href="/client/Hot-News/<%= hotNews._id %>" data-lightbox="image"><img class="image_fade" src="<%= hotNews.billboard %>" alt="Standard Post with Image"></a>
								</div>
								<div class="entry-c">
									<div class="entry-title">
										<h2><a href="/client/Hot-News/<%= hotNews._id %>"><%= hotNews.title %></a></h2>
									</div>
									<ul class="entry-meta clearfix">
										<li><i class="icon-calendar3"></i><%= hotNews.date.toDateString() %></li>
										<li><a href="#"><i class="icon-user"></i><%= hotNews.author.fullname %></a></li>
									</ul>
									<div class="entry-content">
										<p><%- hotNews.content.slice(0, 200); %>...</p>
										<a href="/client/Hot-News/<%= hotNews._id %>" class="more-link">მეტი</a>
                                        <div class="social-share clearfix">
                                            <div>
                                                <a href="#" class="social-icon si-borderless si-text-color si-facebook" title="Facebook">
                                                    <i class="icon-facebook"></i>
                                                    <i class="icon-facebook"></i>
                                                </a>
                                                <a href="#" class="social-icon si-borderless si-text-color si-twitter" title="Twitter">
                                                    <i class="icon-twitter"></i>
                                                    <i class="icon-twitter"></i>
                                                </a>
                                                <a href="#" class="social-icon si-borderless si-text-color si-youtube" title="Youtube">
                                                    <i class="icon-youtube"></i>
                                                    <i class="icon-youtube"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
								</div>
							</div>
							<% }); %>

                        </div><!-- #posts end -->

						<!-- Pagination
						============================================= -->

                        <div class="box-footer text-center">
                            <nav aria-label="Page navigation">
                                <% if (pageCount > 1) { %>
                                <ul class="pagination">
                                    <% if (currentPage > 1) { %>
                                    <li><a href="/?page=1">&laquo;</a></li>
                                    <% } %>
                                    <% var i = 1;
                                        if (currentPage > 5) {
                                            i =+ currentPage - 4;
                                        } %>
                                    <% if (i !== 1) { %>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <% } %>
                                    <% for (i; i <= pageCount; i++) { %>
                                    <% if (currentPage == i) { %>
                                    <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
                                    <% } else { %>
                                    <li><a href="/?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == ( + currentPage + 4)) { %>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <% break; } %>
                                    <% } %>
                                    <% if (currentPage == pageCount) { %>
                                    <li><a href="/?page=<%= currentPage %>">&raquo;</a></li>
                                    <% } %>
                                </ul>
                            </nav>
                            <% } %>
                        </div>
                    </div>
              </div>

