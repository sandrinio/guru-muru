<% include ../partials/authHeader %>

<div class="full-body">
    <div class="login-box-body login-box">
        <p class="login-box-msg">Register</p>
        <form action="/landing/register" method="POST">
            <div class="form-group has-feedback">
                <input name="user[username]" id="username" type="email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="user[fullname]" id="fullname" type="text"  class="form-control" placeholder="Full Name">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <select name="user[permission]" id="permission" class="form-control">
                    <option>admin</option>
                    <option>user</option>
                </select>
            </div>
            <div class="form-group has-feedback">
                <input name="user[bday]" id="bday" type="date" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask>
            </div>
            <div class="form-group has-feedback">
                <input name="password" id="pass1" type="password" class="form-control" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="pass2" type="password" id="pass2" class="form-control" placeholder="Retype Password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8"></div>
                <div class="col-xs-4">
                    <button class="btn btn-primary btn-block btn-flat" id="regBtn" type="submit">Sign up</button>
                </div>
            </div>

        </form>

    </div>

</div>

<% include ../partials/authFooter %>
