<% include ../partials/header %>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">Navigation Bar</li>
            <!-- Optionally, you can add icons to the links -->
            <li class="active"><a href="/admin/admin-panel"><i class="fa fa-home" id="sidebar-icon" aria-hidden="true"></i> <span>საწყისი გვერდი</span></a></li>
            <li class="treeview">
                <a href="/admin/news/new"><i class="fa fa-newspaper-o" id="sidebar-icon-news" aria-hidden="true"></i><span>სიახლეები</span></a>
                <ul class="treeview-menu">
                    <li><a href="/admin/news/new">Add News</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="/admin/news/new"><i class="fa fa-gamepad"></i><span>აპლიკაციები</span></a>
                <ul class="treeview-menu">
                    <li><a href="/admin/app-list">All Apps</a></li>
                    <li><a href="/admin/app/new">Add new App</a></li>
                </ul>
            </li>
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">

    </section>

    <!-- Main content -->
    <section class="content">

        <!-- =============================================  Your Page Content Here  ============================================== -->
        <div class="row">
            <div class="col-md-12">
            <!--all apps-->
            <table class="table table-striped">
                <tbody>
                <% app.forEach(function (thisApp) { %>
                    <tr class="admin-apps-img">
                        <th><img src="<%=thisApp.icon%>"></th>
                        <td><%= thisApp.name %></td>
                        <td><%= thisApp.version %></td>
                        <td><%= thisApp.author.fullname %></td>
                        <td><%= thisApp.date.toDateString() %></td>
                    </tr>
                 <% }) %>
                </tbody>
            </table>
            </div>
        </div>






</div>
<!--Sidebar-->
</div>
<!--END All Feeds row-->

</section>

<!-- /.content -->
</div>
<!-- /.content-wrapper -->


