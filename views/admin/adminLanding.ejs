     <!--All Feeds row-->
        <div class="row">
                <!--Blog feed-->
                <div class="col-md-9">
                    <div class="box box-purple">
                        <div class="box-header with-border">
                            <h3 class="box-title">სიახლეები</h3>
                        </div>
                        <div class="box-body">
                            <% data.hot.forEach(function( hotNews ) { %>
                                <div class="news-item">
                                    <div class="news-image-container pull-left">
                                        <img src="<%= hotNews.billboard %>">
                                    </div>
                                    <div class="news-title">
                                        <a href="/hotNews/<%= hotNews._id %>"><h4><%= hotNews.title %></h4></a>
                                        <p> <%- hotNews.content.slice(0, 200); %>... </p>
                                    </div>
                                    <div class="meta-line">
                                        <span><i class="fa fa-calendar" aria-hidden="true"> <%= hotNews.date.toDateString() %></i></span>
                                        <form action="/news/<%= hotNews._id %>?_method=DELETE" method="POST" id="edit-form">
                                            <button type="submit" class="label label-danger">Delete</button>
                                            <a href="/news/edit" class="label label-warning">edit</a>
                                        </form>
                                    </div>
                                </div>
                            <% }) %>

                            <div class="box-footer text-center">
                                <nav aria-label="Page navigation">
                                <% if (pageCount > 1) { %>
                                <ul class="pagination">
                                    <% if (currentPage > 1) { %>
                                    <li><a href="/mainPage/?page=1">&laquo;</a></li>
                                    <% } %>
                                    <% var i = 1;
                                        if (currentPage > 5) {
                                            i =+ currentPage - 4;
                                        } %>
                                    <% if (i !== 1) { %>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <% } %>
                                    <% for (i; i <= pageCount; i++) { %>
                                    <% if (currentPage == i) { %>
                                    <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
                                    <% } else { %>
                                    <li><a href="/mainPage/?page=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == ( + currentPage + 4)) { %>
                                    <li class="disabled"><a href="#">...</a></li>
                                    <% break; } %>
                                    <% } %>
                                    <% if (currentPage == pageCount) { %>
                                    <li><a href="/mainPage/?page=<%= currentPage %>">&raquo;</a></li>
                                    <% } %>
                                </ul>
                                </nav>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <!--END Blog Feed-->

